{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "lib",
        "strict": true,
        "jsx": "react",
        "strictNullChecks": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}